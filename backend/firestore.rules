rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function userRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    match /users/{uid} {
      allow read: if isSignedIn() && (uid == request.auth.uid || userRole() in ['teacher', 'admin']);
      allow write: if isSignedIn() && uid == request.auth.uid;
    }

    function clubManagers() {
      return request.method == 'create' ? request.resource.data.managers : resource.data.managers;
    }

    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn() &&
        (userRole() in ['admin', 'teacher'] ||
         (clubManagers() != null && request.auth.uid in clubManagers()));
    }

    match /clubPosts/{clubId}/posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() &&
        (request.auth.uid == resource.data.authorUid || userRole() in ['admin', 'teacher']);
    }

    match /events/{eventId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && userRole() in ['admin', 'teacher', 'manager'];
    }

    match /certificates/{certId} {
      allow read: if true;
      allow create: if isSignedIn() && userRole() in ['admin', 'teacher'];
      allow update, delete: if isSignedIn() && userRole() in ['admin'];
    }

    match /classes/{classId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && userRole() in ['admin', 'teacher'];
    }
  }
}
