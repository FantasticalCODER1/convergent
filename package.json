{
  "name": "convergent",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "node scripts/devBackend.mjs",
    "format": "npm run format --prefix frontend && npm run format --prefix backend",
    "prepare": "husky install",
    "sync:changelog": "node scripts/updateChangelog.js",
    "oauth:assist": "node scripts/oauth-assist.mjs",
    "oauth:reset": "node scripts/oauth-reset.mjs"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.0.11"
  }
}